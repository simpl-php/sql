{
    "name": "simpl/sql",
    "description": "A dead-simple layer on top of PDO to make PDO setup and querying simpler",
    "license": "MIT",
    "homepage": "https://github.com/simpl-php/sql",
    "authors": [
        {
            "name": "Nick Volgas",
            "email": "nvolgas@ark.org"
        },
        {
            "name": "Josh Moody",
            "email": "jgmoody@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Simpl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.1.0",
        "ext-pdo": "*"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "symfony/var-dumper": "^3.4 || ^5.1",
        "phpunit/phpunit": "^5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit tests"
        ],
        "codesniffer": [
            "vendor/bin/phpcs --standard=\"./PSR2Tabs.xml\" -p -v src"
        ],
        "codefixer": [
            "vendor/bin/phpcbf --standard=\"./PSR2Tabs.xml\" -p -v src"
        ]
    }
}
