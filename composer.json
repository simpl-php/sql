{
	"name": "volnix/simpl-sql",
	"description": "A dead-simple layer on top of PDO to make PDO setup and querying simpler",
	"license": "MIT",
	"homepage": "https://github.com/volnix/simpl-sql",
	"authors": [
		{
			"name": "Nick Volgas",
			"email": "nvolgas@ark.org"
		}
	],
	"autoload": {
        "psr-4": {
            "Simpl\\": "src/"
        }
    },
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
    "require": {
